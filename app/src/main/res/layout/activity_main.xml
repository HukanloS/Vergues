<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.esiea.masterapp.MainActivity">
        </variable>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="245dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/mh4u"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/SousTitre"
                android:text="@{viewModel.subTitle}"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"                android:textColor="@color/colorTitle"
                android:textSize="35sp"
                android:textStyle="italic"
                android:typeface="sans"
                />

            <Button
                android:id="@+id/startButton"
                android:onClick="@{() -> viewModel.startClick()}"
                android:layout_marginTop="15dp"
                android:layout_width="119dp"
                android:layout_height="123dp"
                android:background="@drawable/mhcb_bicon"
                android:text="@{viewModel.startButton}"
                android:textColor="@color/colorButton"
                android:textStyle="bold"
                android:textSize="20sp"/>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>